{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "watch",
      "type": "shell",
      "command": "pnpm run watch",
      "isBackground": true,
      "problemMatcher": {
        "owner": "webpack",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^ERROR in (.*) (\\d+):(\\d+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 0
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\s*\\[webpack-cli\\] Compiler starting",
          "endsPattern": "^webpack \\d+\\.\\d+\\.\\d+ compiled successfully.*"
        }
      },
      "presentation": {
        "reveal": "never"
      }
    },
    {
      "label": "watch-tests",
      "type": "shell",
      "command": "pnpm run watch-tests",
      "isBackground": true,
      "problemMatcher": "$tsc-watch",
      "presentation": {
        "reveal": "never"
      }
    }
  ]
}
